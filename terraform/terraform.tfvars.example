# AWS 配置
aws_region  = "us-west-2"
environment = "prod"

# 项目配置
project_name = "resort-data"

# 数据库配置
db_username = "app"
db_password = "your-secure-password-here"  # 请修改为强密码！
db_name     = "snow"

# RDS 配置
db_instance_class     = "db.t4g.micro"  # 免费套餐: db.t3.micro
db_allocated_storage  = 20

# Redis 配置
redis_node_type = "cache.t4g.micro"  # 最小规格

# Lambda 配置
lambda_runtime = "python3.10"
lambda_timeout = 30
lambda_memory  = 512

# 数据采集配置 (cron 表达式，UTC 时间)
data_collection_schedule = "cron(0 * * * ? *)"  # 每小时执行一次
# 其他选项:
# cron(0 */2 * * ? *)    # 每2小时
# cron(0 */6 * * ? *)    # 每6小时
# cron(0 0 * * ? *)      # 每天凌晨

# 自定义域名配置
domain_name = "yourdomain.com"  # 已在 Route53 托管的域名

# AWS Profile (本地开发用，GitHub Actions 留空)
aws_profile = "default"  # 本地 AWS CLI profile，CI/CD 自动使用 Secrets

